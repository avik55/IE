@model IndiaEntertainers.Models.tbl_EntrVideos

@{
    ViewBag.Title = "UploadVideo";
}


<div class="row">
    <div class="container">
        <h2 class="h2 page-header text-info">Update Image</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input type="hidden" name="EntrId" value="@ViewBag.EntrId" />

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Videolink, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Videolink, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Videolink, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="clearfix"></div><br /><hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-info" />
                        @Html.ActionLink("Cancel", "MyVideos", "MyAccount", new { area = "Entertainer" }, htmlAttributes: new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }

        <div class="clearfix"></div>
    </div>
</div>
