@model IndiaEntertainers.Models.RegisterViewModel
<!DOCTYPE html>
<html lang="en">

<body class="homepage" ng-app="IndEntnApp">
    <div ng-controller="SrchFilterJsController" ng-cloak>
        <div class="headerWrap">
            <section id="home-banner" class="home-banner">
                <div class="home_box bounce_fade animated bounceIn">
                    <span class="slider_text1">Connecting Entertainers & Talent Seekers</span>
                    <span class="slider_text2">DIRECTLY, INSTANTLY, GLOBALLY</span>
                    <img src="~/images/banner-inside-img.png" class="services-banner hidden-xs">
                </div>
                <form id="search-form" class="search_form" action="" method="post">
                    <span class="srchbox col-xs-12">
                        <input id="search-query" autocomplete="off" name="search" data-ng-model="Qury" data-ng-keyup="Search(Qury)" placeholder="Type to select type of Entertainer" required>
                        <span class="srchico"><i class="fa fa-search" aria-hidden="true"></i></span>
                        <div class="custom-dropdown" data-ng-show="ShowResult">
                            <ul data-ng-repeat="en in SearchResult">
                                <li>
                                    <a ng-href="{{en.URL}}">{{en.IsItCat == true ? en.Title : en.Name}}</a>
                                </li>
                            </ul>
                        </div>
                    </span>
                    <input type="submit" value="Search" id="submit-search" data-ng-click="Search(Qury)" class="submit-search">
                </form>

            </section>
        </div>
    </div>
    <div ng-controller="IndEntnJSController">
        <section id="trending">
            <div class="container">
                <div class="center fadeInDown">
                    <h2 class="sub-title">TRENDING ENTERTAINERS</h2>
                </div>

                <div class="row">
                    <div class="trending">
                        <div class="swiper-container trending_slider">

                            <div class="swiper-wrapper">

                                @foreach (var item in ViewBag.Entertainer as List<IndiaEntertainers.ViewModel.TrendingViewModel>)
                                {
                                    <div class="swiper-slide">
                                        <div class="trending-wrap">
                                            <div class="trend_img">
                                                <a href="@Url.Action("ProfileDetail", "Entertainers", new { id = item.EntrId})">
                                                    <div class="trend_image">
                                                        <img src="~/images/UserImages/@item.ProfilePhoto" alt="" class="img-responsive profile-image" />
                                                    </div>
                                                    <!-- <span class="trend_view"><img src="images/eye-white.png" /> <span class="view_cnt">1000</span></span> -->
                                                    <h3 class="trend_name">@item.FullName</h3>
                                                    <span class="overlay"></span>
                                                </a>
                                            </div>

                                            <div class="trend_dtl">
                                                <div class="dtl">
                                                    <span class="trend_singer"><img src="images/mic.png" /> @IndiaEntertainers.HTMLHelper.CustomHelper.GetEntCatName(item.EntrId)</span>
                                                    <span class="trend_address"><img src="images/address.png" /> @item.CityName</span>
                                                    @*<div><p class="trend_price"><b>₹ @item.PerformanceFees</b> onwards</p></div>*@
                                                    <div><p class="trend_price"><b>Contact for Price</b></p></div>
                                                </div>
                                                <div class="trend_cnt"><a href="javascript:;" data-toggle="modal" ng-click='GetEntrnId(@item.EntrId)' data-target="#contactdialogEntertainer">CONTACT</a></div>
                                            </div>

                                        </div>
                                    </div>
                                    //swiper - slide
                                }
                            </div>
                        </div>
                        <!-- Add Arrows -->
                        <div class="swiper-button-next swiper-button-next1"></div>
                        <div class="swiper-button-prev swiper-button-prev1"></div>
                    </div>

                    @*<div class="trend_all"><a href="javascript:;">View All Entertainers</a></div>*@
