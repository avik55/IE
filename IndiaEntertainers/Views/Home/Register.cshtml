<script>
    function showimagepreview(input) {
        //debugger;
        $("#profilePicError").hide();
        $("#profileProperPicError").hide();
        var validFormats = ['jpg', 'jpeg', 'png'];
        var fileName = input.files[0].name;
        var ext = fileName.substr(fileName.lastIndexOf('.') + 1);
        if (ext == '') return;

        if (validFormats.indexOf(ext) == -1) {
            $("#profileProperPicError").show();
            return false;
        }

        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $('#proimgprvw').show();
                $('#proimgprvw').attr('src', e.target.result);
                $('#profilePicChange').trigger('click');
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    }

    function showcoverimagepreview(input) {
        $("#coverPicError").hide();
        $("#coverProperPicError").hide();
        var validFormats = ['jpg', 'jpeg', 'png'];
        var fileName = input.files[0].name;
        var ext = fileName.substr(fileName.lastIndexOf('.') + 1);
        if (ext == '') return;

        if (validFormats.indexOf(ext) == -1) {
            $("#coverProperPicError").show();
            return false;
        }

        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $('#coverimgprvw').show();
                $('#coverimgprvw').attr('src', e.target.result);
                $('#coverPicChange').trigger('click');
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    }

</script>
