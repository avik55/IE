                $.getJSON(url, { StateId: sId }, function (citieslist) {
                    console.log(citieslist);
                    var clist = $("#CityId");
                    clist.empty();
                    $(clist).append($("<option />", { value: "", text: "-- Select City --" }));
                    $.each(citieslist, function (index, item) {
                        $(clist).append($("<option />", { value: this.Value, text: this.Text }));
