        function profileTitleLength(e) { $("#spanProfileTitle").text($(e).val().length) }


        $("#userName").on("keypress", function (e) { if (e.which === 32) return false; });


        function deleteImgFunction(element) {
            if (confirm("Are you sure you want to remove this image.")) {
                $("#formprofileCompleteDetails").find('img[class=imgLoaderMultipleImg]').show();
                var imageDiv = $(".imageDiv");
                var fileName = $(element).data("title");
                $.post("/Account/DeleteRegisterImages", { ImageTitle: fileName }, function (data, textStatus, jqXHr) {
                    debugger;
                    if (data) {
                        if (data == "Success") {
                            $(element).closest(imageDiv).remove();
                            setTimeout(function () {
                                alert("Image deleted successfully.");
                                $("#formprofileCompleteDetails").find('img[class=imgLoaderMultipleImg]').hide();
                            }, 1000);
                        } else {
                            alert("Cannot delete image, Please try after sometime.");
                            $("#formprofileCompleteDetails").find('img[class=imgLoaderMultipleImg]').hide();
                        }
                    }
                });
            }
        }


        function deleteVideoFunction(element) {
            debugger;
            if (confirm("Are you sure you want to remove this video.")) {
                debugger;
                $("#formprofileCompleteDetails").find('img[class=imgLoaderMultipleVid]').show();
                var videoDiv = $(".VideoDiv");
                var fileName = $(element).data("vidtitle");
                $.post("/Account/DeleteRegisterVideo", { VideoTitle: fileName }, function (data, textStatus, jqXHr) {
                    debugger;
                    if (data) {
